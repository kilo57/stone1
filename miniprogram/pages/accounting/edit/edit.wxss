/* pages/accounting/edit/edit.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #FFEB3B;
  padding: 20rpx;
  padding-top: 80rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.back-button {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.back-button:active {
  background-color: #E6D430;
}

.arrow-left {
  width: 24rpx;
  height: 24rpx;
  border-top: 4rpx solid black;
  border-left: 4rpx solid black;
  transform: rotate(-45deg);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  flex: 1;
  text-align: center;
}

.placeholder {
  width: 70rpx;
}

.content {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.form-card {
  background-color: white;
  border-radius: 32rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border-bottom: 2rpx solid #eee;
  font-size: 32rpx;
  padding: 0 10rpx;
}

.type-selector {
  display: flex;
  align-items: center;
  height: 80rpx;
  border-bottom: 2rpx solid #eee;
  padding: 0 10rpx;
}

.expense-icon-container {
  width: 60rpx;
  height: 60rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.icon-svg {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36rpx;
  height: 36rpx;
  font-weight: bold;
}

/* 咖啡图标 */
.icon-coffee {
  position: relative;
  width: 28rpx;
  height: 28rpx;
  border-radius: 6rpx;
  border: 3rpx solid currentColor;
}

.icon-coffee::before {
  content: "";
  position: absolute;
  top: -10rpx;
  right: -6rpx;
  width: 12rpx;
  height: 6rpx;
  border: 3rpx solid currentColor;
  border-radius: 6rpx 6rpx 0 0;
}

.icon-coffee::after {
  content: "";
  position: absolute;
  top: 6rpx;
  left: 6rpx;
  right: 6rpx;
  height: 3rpx;
  background-color: currentColor;
  border-radius: 2rpx;
}

/* 购物袋图标 */
.icon-shopping {
  position: relative;
  width: 28rpx;
  height: 32rpx;
  border: 3rpx solid currentColor;
  border-radius: 6rpx;
}

.icon-shopping::before {
  content: "";
  position: absolute;
  top: -12rpx;
  left: 5rpx;
  right: 5rpx;
  height: 10rpx;
  border: 3rpx solid currentColor;
  border-bottom: none;
  border-radius: 8rpx 8rpx 0 0;
}

/* 房屋图标 */
.icon-home {
  position: relative;
  width: 32rpx;
  height: 26rpx;
  border: 3rpx solid currentColor;
  border-top: none;
  border-radius: 0 0 6rpx 6rpx;
}

.icon-home::before {
  content: "";
  position: absolute;
  top: -16rpx;
  left: -3rpx;
  right: -3rpx;
  height: 16rpx;
  background-color: currentColor;
  clip-path: polygon(0 100%, 50% 0, 100% 100%);
}

.icon-home::after {
  content: "";
  position: absolute;
  bottom: 5rpx;
  left: 10rpx;
  width: 12rpx;
  height: 12rpx;
  border: 3rpx solid currentColor;
  border-radius: 2rpx;
}

.picker-view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  border-bottom: 2rpx solid #eee;
  padding: 0 10rpx;
}

.arrow-right {
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
  transform: rotate(45deg);
}

.amount-input-container {
  display: flex;
  align-items: center;
  height: 80rpx;
  border-bottom: 2rpx solid #eee;
  padding: 0 10rpx;
}

.amount-symbol {
  font-size: 36rpx;
  font-weight: bold;
  color: #f0b90b;
  margin-right: 10rpx;
}

.amount-input {
  flex: 1;
  height: 80rpx;
  font-size: 36rpx;
  font-weight: bold;
}

.form-save-button {
  width: 100%;
  height: 90rpx;
  background-color: #FFEB3B;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.form-save-button:active {
  background-color: #E6D430;
}

.form-save-button text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
} 