/* edit.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #FFEB3B;
  padding: 20rpx;
  padding-top: 80rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.back-button {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.back-button:active {
  background-color: #E6D430;
}

.arrow-left {
  width: 24rpx;
  height: 24rpx;
  border-top: 4rpx solid black;
  border-left: 4rpx solid black;
  transform: rotate(-45deg);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  flex: 1;
  text-align: center;
}

.placeholder {
  width: 70rpx;
}

.content {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.form-card {
  background-color: white;
  border-radius: 32rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border-bottom: 2rpx solid #eee;
  font-size: 32rpx;
  padding: 0 10rpx;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  border: 2rpx solid #eee;
  border-radius: 16rpx;
  font-size: 32rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.picker-view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  border-bottom: 2rpx solid #eee;
  padding: 0 10rpx;
}

.arrow-right {
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
  transform: rotate(45deg);
}

.type-selector {
  display: flex;
  align-items: center;
  height: 80rpx;
  border-bottom: 2rpx solid #eee;
  padding: 0 10rpx;
}

.type-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.work-icon {
  background-color: #FFD54F;
}

.study-icon {
  background-color: #81C784;
}

.life-icon {
  background-color: #64B5F6;
}

.option-image {
  width: 30rpx;
  height: 30rpx;
}

.form-save-button {
  width: 100%;
  height: 90rpx;
  background-color: #FFEB3B;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20rpx 0 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.form-save-button:active {
  background-color: #E6D430;
}

.form-save-button text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.bottom-save-button {
  margin-top: 40rpx;
  margin-bottom: 0;
} 